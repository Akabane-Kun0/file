<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--上割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#f5f5f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_login_form"
        android:padding="6dp">

        <!--商品图片-->
        <ImageView
            android:id="@+id/img_commodity"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:src="@mipmap/demand" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <!--商品名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品名称："
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/name_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="XXXX"
                    android:textColor="#242424"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--商品描述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品描述："
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/description_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="描述内容为空"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:lineSpacingMultiplier="1.2"/>
            </LinearLayout>

            <!--价格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="商品价格："
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="1.0元"
                    android:textColor="#242424"
                    android:textSize="18sp" />

            </LinearLayout>

            <!--推出时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="推出时间："
                    android:textColor="#242424"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/releaseTime_commodity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="2021年  03月01日 - 05月01日"
                    android:textColor="#9f9f9f"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--下割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#f5f5f4" />

</LinearLayout>